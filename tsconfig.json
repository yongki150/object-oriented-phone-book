{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Projects */

    /* Language and Environment */
    "target": "es2016",
    "moduleDetection": "force",

    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* JavaScript Support */
    "allowJs": true,

    /* Emit */

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
